{
  "name": "read-text-file",
  "version": "0.0.0-alpha.1",
  "description": "handles byte order marks when reading a text file",
  "keywords": [
    "textfile",
    "text",
    "file"
  ],
  "author": "matgr1",
  "license": "MIT",
  "main": "build/es5/read-text-file.js",
  "files": [
    "build/**/*"
  ],
  "typings": "build/read-text-file.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/matgr1/read-text-file"
  },
  "devDependencies": {
    "@types/node": "^6.0.45",
    "babel-cli": "^6.16.0",
    "babel-preset-es2015": "^6.16.0",
    "typescript": "2.0.3"
  },
  "dependencies": {
    "babel-polyfill": "^6.16.0"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "sourceMaps": "inline"
  },
  "scripts": {
    "build:ts": "tsc -p ./src/tsconfig.json",
    "build:babel": "babel build/es6 -d build/es5",
    "build": "npm run build:ts && npm run build:babel"
  }
}