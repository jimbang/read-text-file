{
  "name": "read-text-file",
  "version": "1.0.0",
  "keywords": [
    "textfile",
    "text",
    "file",
    "bom",
    "byte order mark"
  ],
  "author": "matgr1",
  "license": "MIT",
  "main": "dist/read-text-file.js",
  "files": [
    "dist/**/*"
  ],
  "typings": "dist/read-text-file.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/matgr1/read-text-file"
  },
  "devDependencies": {
    "@types/node": "^6.0.45",
    "babel-cli": "^6.16.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-plugin-transform-runtime": "^6.15.0",
    "typescript": "2.0.3"
  },
  "dependencies": {
    "babel-runtime": "^6.11.6"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "sourceMaps": "inline",
    "plugins": [
      [
        "transform-runtime",
        {
          "polyfill": true,
          "regenerator": true
        }
      ]
    ]
  },
  "scripts": {
    "build:ts": "tsc -p ./src/tsconfig.json",
    "build:babel": "babel build -d dist",
    "build": "npm run build:ts && npm run build:babel",
    "prepublish": "npm run build"
  }
}